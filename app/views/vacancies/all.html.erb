<div class="container">
  <h1 class="m-5">Vagas</h1>
  <div class="row">
    <div class="col-lg-12">
      <% @vacancies.each do |vacancy| %>
        <%= render partial: 'vacancy_card', locals: { vacancy: vacancy } %>
      <% end %>
    </div>
  </div>

  <div class="d-flex">
    <div class="mx-auto mt-5">
      <%= paginate @vacancies, outer_window: 3, left: 1, right: 3 %>
    </div>
  </div>

</div>
