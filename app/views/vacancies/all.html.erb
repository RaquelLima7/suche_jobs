<div class="container">
  <%= simple_form_for :search, url: '/', method: "GET", html: { class: 'form-inline mt-5 d-flex justify-content-end' } do |f| %>
    <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Find a vacancy" %> 
    <%= button_tag type: 'submit', class: "btn btn-primary", id: "register-button" do %> 
      <i class="fas fa-search"></i>
    <% end %>
  <% end %>

  <h1 class="my-5">Vacancies</h1>

  <div class="row">
    <div class="col-lg-12">
      <% @vacancies.each do |vacancy| %>
        <%= render partial: 'vacancy_card', locals: { vacancy: vacancy } %>
      <% end %>
    </div>
  </div>

  <div class="d-flex">
    <div class="mx-auto mt-5">
      <%= paginate @vacancies, outer_window: 3, left: 1, right: 3 %>
    </div>
  </div>

</div>
